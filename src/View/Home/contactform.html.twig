{% extends 'layout.html.twig' %}

{% block content %}

    <form method="post">
    <div class="form-group">
        <label class="contactUs" for="exampleFormControlInput1">Email</label>
        <input type="email" class="form-control" id="exampleFormControlInput1" name="email" placeholder="name@example.com">
    </div>
    <div class="form-group">
        <label class="contactUs" for="exampleFormControlSelect1">Subject</label>
        <select class="form-control" id="exampleFormControlSelect1" name="subject">
            <option>the Profile section</option>
            <option>the Message section</option>
            <option>the Post section</option>
            <option>the Avatar section</option>
            <option>the Space_book team</option>
        </select>
    </div>

    <div class="form-group">
        <label class="contactUs" for="exampleFormControlTextarea1">Message</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="message" rows="3"></textarea>
    </div>
        <div class="container">
            {% if errors %}
                <p><small><code style="color: crimson">{{ errors.form }}</code></small></p>
            {% endif %}
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
{% endblock %}